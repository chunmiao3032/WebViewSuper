<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/only_header" />

    <!-- 标题描述+图片及说明 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/ivCardImg"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvCardName"
                        style="@style/largeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡标题及描述" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已有" />

                        <TextView
                            android:id="@+id/tvApplyUserCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4234324"
                            android:textColor="@color/myred2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人申请" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 标题描述 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/huangguan" />

                <TextView
                    android:id="@+id/tvTitleDesc1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="标题描述1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/huangguan" />

                <TextView
                    android:id="@+id/tvTitleDesc2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="标题描述2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/huangguan" />

                <TextView
                    android:id="@+id/tvTitleDesc3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="标题描述3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/bg_color" >

        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dip"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="卡信息" >
        </Button>

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dip"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="相关费用" >
        </Button>

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="注意事项" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@color/bg_color"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/hongshu" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="免息期:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesc1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="描述1"
                    android:textColor="@color/grgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/hongshu" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="免年费政策:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesc2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="描述2"
                    android:textColor="@color/grgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/hongshu" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="积分有效期:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesc3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="描述3"
                    android:textColor="@color/grgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/hongshu" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="卡等级:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesc4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="描述4"
                    android:textColor="@color/grgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/hongshu" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="卡币种:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesc5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="描述5"
                    android:textColor="@color/grgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/hongshu" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="卡组织:" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesc6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="描述6"
                    android:textColor="@color/grgray" />
            </LinearLayout>
        </ScrollView>
        
       <ListView
             android:id="@+id/lv2"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
              android:visibility="gone"
            ></ListView>
        
        <TextView 
             android:id="@+id/tv3"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:visibility="gone"
             />
        
        
    </LinearLayout>

     
    
    <Button
        android:id="@+id/btApply"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/myred2"
        android:text="免费申请"
        android:textColor="@color/white" >
    </Button>

</LinearLayout>