<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:orientation="vertical" >

        <include layout="@layout/only_header" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/bg_color"
            android:orientation="horizontal" 
            android:visibility="gone">

            <ImageButton
                android:id="@+id/ibSysLink1"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/rmp" />

            <ImageButton
                android:id="@+id/ibSysLink2"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/jjp" />

            <ImageButton
                android:id="@+id/ibSysLink3"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/wsp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/bg_color"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ibCardShow"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/znsk" />

                <ImageButton
                    android:id="@+id/ibApplyQuery"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/skjdcx" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ibSxcx"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/sxcx" />

               <ImageButton
                    android:id="@+id/ibYJTE"
                     android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/kste" />
            </LinearLayout>
        </LinearLayout>

        <!-- 银行推荐 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:text="银行推荐"
            android:textSize="16sp" />

        <com.common.MyGridView
            android:id="@+id/grid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/bg_color"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:listSelector="@null"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2dp" />
    </LinearLayout>

</ScrollView>